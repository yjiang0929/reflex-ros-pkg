<launch>
    <param name="usb_hand_type" type="string" value="reflex_one" />
    <!-- The latest reflex_one rosbag gets stored in the bagfiles folder -->
    <!-- Play this file bag, rename it to save it, or use it for debugging as desired -->
    <node pkg="rosbag" type="record" name="recorder" args="--all -O $(find reflex)/bagfiles/latest_reflex_one_run"/>
    <node name="dynamixel_manager" pkg="dynamixel_controllers" type="controller_manager.py" required="true" output="screen">
        <rosparam>
            namespace: dxl_manager
            serial_ports:
                reflex_one_port:
                    port_name: "/dev/ttyUSB0"
                    baud_rate: 1000000
                    min_motor_id: 1
                    max_motor_id: 3
                    update_rate: 20
        </rosparam>
    </node>
    <rosparam file="$(find reflex)/yaml/reflex_one.yaml" command="load"/>
    <rosparam file="$(find reflex)/yaml/reflex_one_zero_points.yaml" command="load"/>
    <node name="reflex_one_controller_spawner" pkg="dynamixel_controllers" type="controller_spawner.py"
          args="--manager=dxl_manager
                --port reflex_one_port
                reflex_one_f1 reflex_one_f2 reflex_one_preshape1"
          output="screen"/>
    <node name="reflex_one_hand" pkg="reflex" type="reflex_one_hand.py" required="true" output="screen"/>
</launch>
